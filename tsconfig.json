{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
